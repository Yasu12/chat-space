.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__group-name
        = @group.name
      .chat-main__group-info__left__member
        Member :
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(params[:group_id]), class:"chat-main__group-info__btn" do
      Edit
  
  .chat-main__message-lists
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__new-message
        .chat-main__message-form__new-message__input-box
          = f.text_field :content, class: 'chat-main__message-form__new-message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'chat-main__message-form__new-message__input-box__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'chat-main__message-form__new-message__input-box__image__file'
        = f.submit 'Send', class:'chat-main__message-form__new-message__submit-btn'
