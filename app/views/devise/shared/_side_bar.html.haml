.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__name
        = current_user.name
      %ul.side-bar__user-name__box__icons
        %li
          = link_to new_group_path, class: "side-bar__user-name__box__icons__icon" do
            = icon('fas', 'edit')
        %li
          = link_to edit_user_path(current_user), class:"side-bar__user-name__box__icons__icon" do
            = icon('fas', 'cog')
  .side-bar__group-lists
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message